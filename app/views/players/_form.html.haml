= form_for @player, :html => { :class => 'form-horizontal' } do |f|
  .control-group
    = f.label :first_name, :class => 'control-label'
    .controls
      = f.text_field :first_name, :class => 'text_field'
  .control-group
    = f.label :last_name, :class => 'control-label'
    .controls
      = f.text_field :last_name, :class => 'text_field'
  .control-group
    = f.label :nickname, :class => 'control-label'
    .controls
      = f.text_field :nickname, :class => 'text_field'
  .control-group
    = f.label :height, :class => 'control-label'
    .controls
      = f.text_field :height, :class => 'text_field'
  .control-group
    = f.label :weight, :class => 'control-label'
    .controls
      = f.text_field :weight, :class => 'text_field'
  .control-group
    = f.label :team_id, :class => 'control-label'
    .controls
      = f.select(:team_id, Team.all.collect {|u| [u.name, u.id]})
  .form-actions
    = f.submit nil, :class => 'btn btn-primary'
    = link_to t('.cancel', :default => t("helpers.links.cancel")), players_path, :class => 'btn'
