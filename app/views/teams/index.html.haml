- model_class = Team
- if user_signed_in?
  = link_to t('.new', :default => t("helpers.links.new")), new_team_path, :class => 'btn btn-primary pull-right'

.page-header
  %h1=t '.title', :default => model_class.model_name.human.pluralize.titleize

- if @teams.present?
  %table.table
    %thead
      %tr
        %th= model_class.human_attribute_name(:name)
        %th= model_class.human_attribute_name(:color)
        - if user_signed_in?
          %th=t '.actions', :default => t("helpers.actions")
    %tbody
      - @teams.each do |team|
        %tr
          %td= link_to team.name, team_path(team)
          %td= team.color
          - if user_signed_in?
            %td
              = link_to t('.edit', :default => t("helpers.links.edit")), edit_team_path(team), :class => 'btn btn-mini'
              = link_to t('.destroy', :default => t("helpers.links.destroy")), team_path(team), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-mini btn-danger'
- else
  %p No teams to display
